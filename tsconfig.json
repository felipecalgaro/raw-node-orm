{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "target": "ES2022",
    "moduleResolution": "Node10",
    "module": "CommonJS",
    "declaration": true,
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "outDir": "dist"
  },
  "include": [
    "src",
    "cli.ts"
  ],
  "exclude": [
    "node_modules",
    "test",
    "generated"
  ]
}